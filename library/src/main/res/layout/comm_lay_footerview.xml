<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layLoading"
        android:layout_width="match_parent" android:layout_height="58dip" android:gravity="center" android:orientation="horizontal"
        android:paddingRight="52dip">

        <ProgressBar
            style="@style/LoadingProgressBar" android:layout_width="36dip" android:layout_height="36dip"
            android:layout_marginRight="16dip"/>

        <TextView
            android:id="@+id/txtLoadingHint" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/btnLoadMore" android:layout_width="match_parent" android:layout_height="58dip" android:gravity="center" android:visibility="gone"/>

</LinearLayout>
